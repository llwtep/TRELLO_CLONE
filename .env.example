# ==============================================================================
# Environment Variables - Copy to .env and fill in values
# ==============================================================================

# PostgreSQL Configuration (unique names to avoid conflicts)
POSTGRES_USER=llwtep_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=llwtep_db

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars

# Email Configuration (optional)
EMAIL=
PASS=

# API Configuration
API_URL=http://localhost:3080/api

# Frontend Configuration
# Change this port if 3080 is already in use
VITE_API_URL=/api
FRONTEND_PORT=3080

# Uvicorn Workers (adjust based on CPU cores)
UVICORN_WORKERS=2
